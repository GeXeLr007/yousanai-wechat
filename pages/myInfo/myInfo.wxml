<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <view class='item'>
    <text class='left'>用户名：</text>
    <text class='right'>{{myInfo.username}}</text>
  </view>
  <view class='item'>
    <text class='left'> 手机号：</text>
    <text class='right'>{{myInfo.mobile}}</text>
  </view>
  <view class='item'>
    <text class='left'>E-mail：</text>
    <text class='right'>{{myInfo.mail}}</text>
  </view>
  <button bindtap='goEditMyInfo'>修改个人信息</button>

</view>