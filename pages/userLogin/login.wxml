<view>
    <view class="login-icon">
        <image class="login-img" src="../../image/2.png"></image>
    </view>
    <view class="login-from">
        <form bindsubmit='doLogin'>
            <!--账号-->
            <view class="inputView">
                <image class="nameImage" src="../../image/username.png"></image>
                <label class="loginLabel">账号</label>
                <input name="realname" class="inputText" placeholder="请输入账号" value='dulp'/>
            </view>
            
            <view class="line"></view>

            <!--密码-->
            <view class="inputView">
                <image class="keyImage" src="../../image/password.png"></image>
                <label class="loginLabel">密码</label>
                <input name="password" class="inputText" password="true" placeholder="请输入密码" value='19971104yhb'/>
            </view>

            <!--按钮-->
            <view>
                <button class="loginBtn" type="primary" form-type='submit'>登录</button>
            </view>

            <view>
                <button class="goLoginBtn" type="warn" bindtap="goRegistPage">没有账号?立即注册</button>
            </view>
        </form>
    </view>
</view>